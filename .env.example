# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# PostgreSQL Configuration
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=open_grip_board

# Database URL for backend
DATABASE_URL=postgresql://your_username:your_secure_password@database:5432/open_grip_board

# JWT Configuration (minimum 32 characters recommended)
JWT_SECRET=generate_a_secure_random_string_here_at_least_32_chars

# MQTT Configuration
MQTT_HOST=broker
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info
